@model LoanInventoryViewModel
@{
    ViewData["Title"] = "Product Edit Data";
}

<h2>Form Edit Product</h2>

<form asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Id">Product Id</label>
        <input asp-for="Id" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="NameUser">Name User For Loan</label>
        <input asp-for="NameUser" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Detail">Detail</label>
        <input asp-for="Detail" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Admin">Admin Pemberi Acc</label>
        <input asp-for="Admin" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Status">Status Peminjaman</label>
        <select class="form-select" aria-label="Set Status" id="Status" name="Status">
            <option selected>Select Status Here</option>
            <option value="false">False</option>
            <option value="true">True</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}