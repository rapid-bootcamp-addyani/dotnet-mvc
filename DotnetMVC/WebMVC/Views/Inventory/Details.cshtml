@model InventoryViewModel

@{
    ViewData["Title"] = "Inventory Details";
}

<h2>Inventory Detail</h2>
<table class="table tab-content">
    <tbody>
        <tr>
            <th>ID</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Specification</th>
            <td>@Model.Specification</td>
        </tr>
    
        <tr>
            <th>Quantity</th>
            <td>@Model.Quantity</td>
        </tr>

        <tr>
            <th>On Loan</th>
            <td>@Model.OnLoan</td>
        </tr>

        <tr>
            <th>Quantity</th>
            <td>@Model.Ready</td>
        </tr>

    </tbody>
</table>

<a class="btn btn-sm btn-primary" asp-area="" asp-controller="Inventory" asp-action="List">Back</a>
