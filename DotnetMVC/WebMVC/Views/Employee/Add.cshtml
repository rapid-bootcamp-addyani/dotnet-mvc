@model EmployeeViewModel
@{
    ViewData["Title"] = "Employee View Data";
}

<h2>Form Add Employee</h2>

<form asp-action="Save" method="post">
     <div class="form-group">
        <label asp-for="Id">Employee Id</label>
        <input asp-for="Id" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="EmployeeName">Name</label>
        <input asp-for="EmployeeName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Position">Position</label>
        <select class="form-select" aria-label="Set Position" id="Position" name="Position">
            <option selected>Select Position Here</option>
            <option value="QA">QA</option>
            <option value="BE">BE</option>
            <option value="FE">FE</option>
        </select>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}