@model List<MailboxViewModel>
@{
    ViewData["Title"] = "Mailbox List";
}

<h2>Mailbox List</h2>
<a class="btn btn-sm btn-primary" asp-area="" asp-controller="Mailbox" asp-action="Add">Create New Mailbox</a>

<table class="table table-responsive">
    <thead>
    <tr>
        <th>ID</th>
        <th>User Sending</th>
        <th>To Recipient</th>
        <th>CC Recipient</th>
        <th>Subject</th>
        <th>Body</th>
        <th>Attacment</th>
        <th>Scheduled</th>
        <th>Status Sending</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var item in Model )
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.UserSending</td>
            <td>@item.ToRecipients</td>
            <td>@item.CCRecipients</td>
            <td>@item.Subject</td>
            <td>@item.Body</td>
            <td>@item.Attachment</td>
            <td>@item.Scheduled</td>
            <td>@item.StatusDone</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-success">View</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
